{
  "manifest_version": 2,
  "name": "Tabs Overview",
  "author": "Adrien Bustany",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "tabs-overview@bustany.org",
      "strict_min_version": "47.0"
    }
  },

  "description": "Displays a visual overview of all tabs, and allows switching between them",
  "homepage_url": "https://bustany.org",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },

  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "browser_style": true,
    "default_title": "Tabs Overview",
    "default_popup": "popup/overview.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png"
    }
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Activate Tabs Overview"
    }
  }
}
